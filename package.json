  "description": "The 4rd version of the site [React + TypeScript + Next]",
  "scripts": {
    "start": "next start",
    "build": "webpack -c webpack.pre-build.config.js && next build",
    "dev": "next dev",
    "test": "eslint --ext .ts,.tsx ./ && stylelint ./**/*.scss",
    "fix": "eslint --ext .ts,.tsx --fix ./ && stylelint --fix ./**/*.scss"
  },
  "author": "Alexandrovich Dmitriy <yoskutik@gmail.com>",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm --no-git-tag-version version patch && git add package.json"
    }
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/multiparty": "^0.0.32",
    "@types/node-telegram-bot-api": "^0.51.1",
    "@types/react": "^17.0.3",
    "@types/react-toast-notifications": "^2.4.0",
    "@types/styled-jsx": "^2.2.8",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "sass": "^1.32.8",
    "typescript": "^4.2.3",
    "webpack": "^5.24.4",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "cli-progress": "^3.9.0",
    "favicons": "^6.2.1",
    "favicons-webpack-plugin": "^5.0.2",
    "glob": "^7.1.6",
    "imagemin": "^7.0.1",
    "imagemin-webp": "^6.0.0",
    "natural": "^4.0.0",
    "next": "^10.0.8",
    "node-telegram-bot-api": "^0.51.0",
    "path": "^0.12.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-toast-notifications": "^2.4.3",
    "sitemap-webpack-plugin": "^1.1.0"
  },
  "eslintIgnore": [
    "node_modules"
  ]
}
